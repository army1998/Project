@{
    Layout = "~/Views/Shared/_LayoutAppChat.cshtml";
}

<link href="~/css/CommentPost.css" rel="stylesheet" />

<div class="main">
    <div class="background">
        <img src="@Url.Content(@ViewBag.Photo)" />
    </div>
</div>
<nav class="navbar navbar-default fbTimeline" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="#">@ViewBag.name</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Giới Thiệu</a></li>
                <li>
                    <a href="#">Nội quy</a>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class=" col-xs-12 col-sm-12 col-md-12 col-lg-12 rig">
            <div class="tool">
                <nav class="navbar navbar-default" role="navigation">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav">
                                <li class="post1">
                                    <i class="fa fa-pencil"></i>
                                    <a href="#">Post</a>
                                </li>
                                <li>
                                    <i class="fa fa-photo"></i>
                                    <a href="#">Photo/Video</a>
                                </li>
                                <li>

                                    <i class="fa fa-tags"></i>
                                    <a href="#">Tag Friend</a>
                                </li>
                                <li class="life">
                                    <i class="far fa-smile-beam"></i>
                                    <a href="#">Feeling/Active</a>
                                </li>
                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div>
                </nav>
            </div>
            <div class="box clearfix">
                <div class="textbox">
                    <textarea class="think" placeholder="Nhập vào đây dể đăng bài viết..."></textarea>
                </div>
                <hr>
                <div class="bot">
                    <button class="btn btn-primary">Chia sẻ</button>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="post">
                <div class="content-post">
                    <div class="header-post">
                        <div class="avatar-post" style="padding-left: 5px">
                            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/195612/chat_avatar_01.jpg" alt="">
                        </div>
                        <div class="infor col-md-11">
                            <div class="row">
                                <div class="name-user col-md-9">
                                    <a href="javascript:void(0)" class="username_post">Nguyễn Tiến Xuân</a>
                                    <div class="time-post">23h30 - 30/12/2019</div>
                                </div>
                                <div class="option-seting col-md-2">
                                    <span class="glyphicon glyphicon-cog" id="setting"></span>
                                    <ul class="setting-menu list-unstyled">
                                        <li class="setting-menu_list-item" id="edit-post"><a href="javascript:void(0)">Sửa bài viết</a></li>
                                        <li class="setting-menu_list-item" id="delete-post"><a href="javascript:void(0)">Xóa bài viết</a></li>
                                        <li class="setting-menu_list-item" id="report-post"><a href="javascript:void(0)">Báo cáo bài viết</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-post">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sequi, a nemo asperiores dolorum
                            ipsam
                            officiis saepe blanditiis repudiandae sint. Sapiente tempora nulla maiores quod
                            praesentium,
                            ducimus cumque vitae incidunt natus.
                        </p>
                        <textarea type="text" name="name" value="" id="edit-contentpost"></textarea>
                        <div class="row edit-post-btn">
                            <button id="save-edited-post" class="btn btn-success">Lưu</button>
                            <button id="cancel-edited-post" class="btn btn-danger">Hủy</button>
                        </div>

                    </div>
                    <div class="footer-post" style="background:#eef7f1">

                        <div class="option-like">

                            <div class="like col-md-4" id="like-post">
                                <a href="javascript:void(0)" class="button"><span class="glyphicon glyphicon-thumbs-up"></span>Thích</a>
                            </div>
                            <div class="comment col-md-8" id="numberOfLikes">
                                <a href="javascript:void(0)" class="button"><span class="countLike_post"> 0 </span> người thích</a>
                            </div>
                            <div class="save col-md-4" id="save-post">
                                <a href="javascript:void(0)" class="button"><span class="glyphicon glyphicon-save"></span> Lưu</a>
                            </div>
                        </div>
                    </div>
                    <div class="show-comment" id="btnShowComment">
                        <a href="javascript:void(0)">
                            <span>Xem thêm bình luận</span>
                            <span><i class="fas fa-angle-down"></i></span>
                        </a>
                    </div>
                </div>

                <div class="comment-post">
                    <div class="comment-post-wrapper">

                    </div>
                    <div class="row textbox-comment">
                        <div class="comment-img col-md-2">
                            <img src="~/Content/SignIn/images/bacho.png" style="width:50px;height:50px" />
                        </div>
                        <div class="comment-box col-md-9">
                            <input id="inputComment" type="text" placeholder="Viết bình luận....">
                            <div class="pick-emoji">
                                😊
                            </div>
                            <div class="list-icon-comment" style="display:none;">
                                @Html.Partial("_IconPartialView")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4" style="position:sticky;top:0;overflow-x:auto">
        <div class="content-listFriendSuggest">
            <div class="row suggest-friend">
                <div class="col-sm-12">
                    <img class="img-responvsive" src="~/Content/SignIn/images/bacho.png" alt="Alternate Text" />
                </div>
                <div class="col-sm-12">
                    <div class="row infor">
                        <h5>Nguyễn Bình Dương</h5>
                        <div class="btn btn-primary add-friend">
                            Kết bạn
                        </div>
                        @*<input type="hidden" id="@item.UserName" value="@item.UserName" />*@
                        <div class="btn btn-danger delete-suggest">
                            Xóa
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-listFriendSuggest">
            <div class="row suggest-friend">
                <div class="col-sm-12">
                    <img class="img-responvsive" src="~/Content/SignIn/images/bacho.png" alt="Alternate Text" />
                </div>
                <div class="col-sm-12">
                    <div class="row infor">
                        <h5>Nguyễn Bình Dương</h5>
                        <div class="btn btn-primary add-friend">
                            Kết bạn
                        </div>
                        @*<input type="hidden" id="@item.UserName" value="@item.UserName" />*@
                        <div class="btn btn-danger delete-suggest">
                            Xóa
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-listFriendSuggest">
            <div class="row suggest-friend">
                <div class="col-sm-12">
                    <img class="img-responvsive" src="~/Content/SignIn/images/bacho.png" alt="Alternate Text" />
                </div>
                <div class="col-sm-12">
                    <div class="row infor">
                        <h5>Nguyễn Bình Dương</h5>
                        <div class="btn btn-primary add-friend">
                            Kết bạn
                        </div>
                        @*<input type="hidden" id="@item.UserName" value="@item.UserName" />*@
                        <div class="btn btn-danger delete-suggest">
                            Xóa
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

<div id="demo" style="display: none">
    <div class="comment-level" style="padding-bottom: 10px">
        <div class="row">
            <div class="col-md-1" style="display: inline-block">
                <img src="~/Content/SignIn/images/bacho.png" />
            </div>

            <div class="comment-content">
                <div class="comment-content_wrapper">
                    <a href="javascript:void(0)" class="name-reply">Nguyễn Tiến Xuân</a>
                    <span>
                        xin chào các bạn, các bạn đang làm gì đó
                    </span>
                    <textarea type="text" name="name" value="" id="edit-clone"></textarea>
                </div>
                <div class="comment-content_setting">
                    <span class="glyphicon glyphicon-option-horizontal" id="setting-comment"></span>
                    <ul class="setting-comment_list list-unstyled">
                        <li class="setting-comment_list-item" id="edit-comment"><a href="javascript:void(0)">Sửa</a></li>
                        <li class="setting-comment_list-item" id="delete-comment"><a href="javascript:void(0)">Xóa</a></li>
                    </ul>
                </div>
                <br />
                <div class="reply-button" style="margin-left: -7px; font-size: 9pt; margin-top: 2px">
                    <div class="col-md-1" style="padding-right: 30px" id="btnLikeComment">
                        <a href="javascript:void(0)" class="button"><span>Thích</span></a>
                    </div>
                    <div class="col-md-1">
                        <a id="btnReply" href="javascript:void(0)">Reply</a>
                    </div>
                    <div style="margin-left: 100px; display:none">
                        <a id="countLikeComment" href="javascript:void(0)"><span class="countLike_comment"> 0 </span> lượt thích</a>
                    </div>
                </div>
            </div>

        </div>


        <div class="comment-wrapper2">

        </div>
        <div class="textbox-reply row">
            <div class="reply-img col-md-1" style="padding-top: 8px">
                <img src="~/Content/SignIn/images/bacho.png" />
            </div>
            <div class="reply-box col-md-9" style="margin-left: 20px">
                <input id="inputReply" type="text" placeholder="Viết phản hồi....">
                <div class="pick-emoji-reply">
                    😊
                </div>
                <div class="list-icon-reply" style="display:none;">
                    @Html.Partial("_IconPartialView")
                </div>
            </div>

        </div>
    </div>
</div>

