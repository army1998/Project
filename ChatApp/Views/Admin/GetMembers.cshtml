@model IEnumerable<ChatApp.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "GetMembers";
    Layout = "~/Views/Admin/_AdminPartialView.cshtml";
}


<div class="content-wrapper" style="padding-left: 10px">
    <section class="content-header">
        <h1>
            Danh sách thành viên
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Members</li>
        </ol>
    </section>
    <div class="add-student" style="padding-bottom: 15px; border-bottom: 1px solid gray; margin-bottom: 10px">
    </div>
    <table class="table table-striped table-hover" id="table-student">
        <thead>
            <tr>
                <th>Mã thành viên</th>
                <th>
                    Tên thành viên
                </th>
                <th>
                    Email
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a href="#"><button class="btn btn-primary">Thông tin cá nhân</button></a>
                            <a href="#"><button class="btn btn-primary">Danh sách bạn bè</button></a>
                            <a href="#"><button class="btn btn-primary">Các bài đã đăng</button></a>
                            <a href="#"><button class="btn btn-danger">Khóa thành viên</button></a>
                        </td>
                    </tr>
                }
            </tbody>
    </table>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Nhập dữ liệu từ File Excel
        </div>
        <form action="#" method="post" enctype="multipart/form-data"
              style="padding: 15px">
            <input type="file" name="fileUpload" />
            <br />
            <button type="submit" value="Import" class="btn btn-success" />Import Data</button>
        </form>
    </div>
</div>

