@model IEnumerable<ChatApp.Models.ViewModels.FriendInfoViewModel>

@{
    ViewBag.Title = "GetListFriend";
    Layout = "~/Views/Admin/_AdminPartialView.cshtml";
}
<style>
    .content-wrapper {
        padding-bottom: 25px;
    }

    .content-wrapper h2 {
        padding-left: 20px;
    }
</style>

@{
    if (ViewBag.ListFriend == 0)
    {
        <div class="content-wrapper">
            <section class="content-header"></section>
            <h2>@ViewBag.Name hiện tại chưa có bạn bè nào</h2>

            <div style="padding-left: 20px;">
                <a href="/Admin/GetMembers">Quay lại trang danh sách học sinh</a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="content-wrapper" style="padding-left: 10px">
                    <section class="content-header">
                        <h1>
                            Danh sách bạn bè của @ViewBag.Name
                        </h1>
                        <ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                            <li class="active">Friends</li>
                        </ol>
                    </section>
                    <div class="add-student" style="padding-bottom: 15px; border-bottom: 1px solid gray; margin-bottom: 10px">
                    </div>

                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <table class="table table-striped table-hover" id="table-student">
                                <thead>
                                    <tr>
                                        <th>Số thứ tự</th>
                                        <th>
                                            Tên thành viên
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>Avatar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int i = 0; }
                                    @foreach (var item in Model)
                                    {
                                        i = i + 1;
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                <img src="@Html.DisplayFor(modelItem => item.Avatar)" alt="Alternate Text" style="width: 50px;height:50px" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div style="padding-left: 20px;">
                            <a href="/Admin/GetMembers">Quay lại trang danh sách học sinh</a>
                        </div>
                    }
                </div>
            </div>
        </div>
     }
}


