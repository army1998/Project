<div class="people-list" id="people-list">
    <div class="search">
        <input type="text" placeholder="Tìm kiếm ...." />
    </div>
    <ul class="list">
        @{
            foreach (var item in Model)
            {
                <li class="clearfix" onclick='OpenChatBox(this)'>
                    <img src="@item.Avatar" alt="avatar" />
                    <div class="about">
                        <div class="name1">@item.Name</div>
                        <div class="status" id="@item.UserName">
                            <i class="fa fa-circle offline"></i> offline
                        </div>
                    </div>
                    <div class="message">
                        @if (!item.SeenMessage)
                        {
                            <i class="fa fa-comment-o"></i>
                        }
                    </div>
                </li>
            }
        }
    </ul>
</div>
<div class="chat" style="display:none">
    <div class="chat-header clearfix">
        <img src="" alt="avatar" />
        <div class="chat-about">
            <div class="chat-with"></div>
            <div class="chat-num-messages">Conversation ready</div>
        </div>
        <input type="hidden" id="partnerUserName" value="" />
        <i class="fa fa-close"></i>
    </div> <!-- end chat-header -->
    <div class="chat-history" id="ContentMessage" onscroll="LoadData(this)">
        <ul></ul>
    </div> <!-- end chat-history -->
    <div class="chat-message clearfix">
        <textarea name="message-to-send" id="message-to-send" placeholder="Type your message" rows="3"></textarea>
        <i class="fa fa-file-o"></i> &nbsp;&nbsp;&nbsp;
        <i class="fa fa-smile-o"></i>
        <button id="SendClick">Send</button>
        <div class="list-icon" style="display:none;">
            @Html.Partial("_IconPartialView")
        </div>
    </div> <!-- end chat-message -->
</div> <!-- end chat -->
